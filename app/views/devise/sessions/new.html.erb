<div class="row">
  <div class="col s12 m10 l8 offset-m1 offset-l2">
    <div class="card-panel">
      <h2 class="center">Log In</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="row">
          <div class="col s10 offset-s1">
            <div class="col s12">
              <div class="field">
                <%= f.label :login %><br />
                <%= f.email_field :login, autofocus: true %>
              </div>
            </div>
            <div class="col s12">
              <div class="field">
                <%= f.label :password %><br />
                <%= f.password_field :password, autocomplete: "off" %>
              </div>
            </div>
            <div class="row">
              <div class="col s6">
                <% if devise_mapping.rememberable? -%>
                  <div class="field">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  </div>
                <% end%>
              </div>
            </div>
            <div class="row right">
              <div class="col s12">
                <div class="actions">
                  <%= f.submit "Log in", :class=>"btn" %>
                  <%= link_to "Sign up", new_user_registration_path, :class => 'btn'  %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

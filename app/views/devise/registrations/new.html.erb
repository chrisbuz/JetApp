<div class="row">
  <div class="col s12 m10 l8 offset-m1 offset-l2">
    <div class="card-panel">
      <h2 class="center">Sign Up</h2>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:multipart => true}) do |f| %>
        <span class="red-text">
          <h6><%= devise_error_messages! %></h6>
        </span>
        <div class="row">
          <div class="col s12 m10 offset-m1 l8 offset-l2">
            <div class="row">
              <div class="col s12 m6">
                <%= f.text_field :firstName, required: :true, placeholder: "First Name"%>
              </div>
              <div class="col s12 m6">
                <%= f.text_field :lastName, required: :true, placeholder: "Last Name"%>
              </div>
            </div>
            <div class="row">
              <div class="col s12 m6">
                <%= f.text_field :profileName, required: :true, placeholder: "Profile Name"%>
              </div>
              <div class="col s12 m6">
                <%= f.email_field :email, required: :true, hide_label: :true, placeholder: "Email" %>
              </div>
            </div>
            <div class="row">
              <%if @validatable %>
                <div class="col s6 m6">
                  <%= f.password_field :password, autocomplete: "off", required: :true, hide_label: :true, placeholder: "Password", help: "Must be #{@minimum_password_length} characters minimum" %>
                </div>
              <% else %>
                <%= f.password_field :password, autocomplete: "off", required: :true, hide_label: :true, placeholder: "Password" %>
              <% end %>
              <div class="col s6 m6">
                <%= f.password_field :password_confirmation, autocomplete: "off", required: :true, hide_label: :true, placeholder: "Confirm password" %>
              </div>
            </div>
            <div class="row">
              <div class="col s6 m6">
                <%= f.file_field :avatar %>
                <%= f.hidden_field :avatar_cache %>
              </div>
              
            </div>
            <div class="right">
              <%= f.submit "Sign up", :class=>"btn" %>
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
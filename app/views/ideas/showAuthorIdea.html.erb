 	<div class="col s12">
		<div class="pagination_links">
	    <%= paginate @user_idea, :pagination_class => "pagination-medium pagination-centered", :container => false %>
	  </div>
	</div>
</div>
<div class="row">
	<div class="col s12">
	  <div class="page_info center">
	    <%= page_entries_info @user_idea %>
	  </div>
 	</div>
</div>

